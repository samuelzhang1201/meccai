# Environment Configuration
ENVIRONMENT=dev

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Tableau Configuration (keep secret!)
TABLEAU_PAT_TOKEN=your_tableau_pat_token_here

# MCP Configuration
MCP_CONFIG_PATH=config/mcp/cursor.mcp.json
MCP_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database (if using vector storage)
DATABASE_URL=sqlite:///./meccaai.db

# Telemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=meccaai